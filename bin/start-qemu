#!/bin/bash

echo ===========
echo change vnc password
echo ===========
echo

qemu_extra_flags=""

if [[ $1 == "-g" ]]; then
   qemu_extra_flags="$qemu_extra_flags -s -S"
fi

qemu-system-x86_64 -m 128M -bios /usr/share/ovmf/OVMF.fd -drive file=vm/uefi.img,if=ide --vnc :1,password -monitor stdio $qemu_extra_flags

#qemu-system-x86_64 -m 128M -drive file=vm/uefi.img,if=ide -drive if=pflash,format=raw,readonly,file=/usr/share/OVMF/OVMF_CODE.fd -drive if=pflash,format=raw,file=vm/OVMF_VARS.fd --vnc :1,password -monitor stdio
