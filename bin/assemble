#!/bin/bash

make x86_64-obj/kernel.elf || exit 1
make uefi.efi || exit 1

bin/mnt-uefi vm/uefi.img mnt
echo "sudo rm mnt/BOOT/kos/kernel.elf"
sudo rm mnt/BOOT/kos/kernel.elf
echo "sudo rm mnt/EFI/BOOT/BOOTX64.EFI"
sudo rm mnt/EFI/BOOT/BOOTX64.EFI
echo "sudo cp x86_64-obj/kernel.elf mnt/BOOT/kos/kernel.elf"
sudo cp x86_64-obj/kernel.elf mnt/BOOT/kos/kernel.elf
echo "sudo cp x86_64-obj/uefi.efi mnt/EFI/BOOT/BOOTX64.EFI"
sudo cp x86_64-obj/uefi.efi mnt/EFI/BOOT/BOOTX64.EFI
bin/umnt-uefi mnt
